{
  "plugins": {
    "local": {
      "browsers": [
        "chrome",
        "firefox"
      ]
    },
    "istanbul": {
      "dir": "./test/coverage",
      "reporters": ["text-summary", "lcov"],
      "include": [
        "**/*.html",
        "**/*.js"
      ],
      "exclude": [
        "**/bower_components/**/*",
        "**/node_modules/**/*",
        "**/test/*.html"
      ]
    }
  }
}